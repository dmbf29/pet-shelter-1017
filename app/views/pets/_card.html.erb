<div class="card-product">
  <%= image_tag "http://source.unsplash.com/featured/?#{pet.species.downcase}&#{rand(1000)}/800x333" %>
  <div class="card-product-infos">
    <h2><%= link_to pet.name, pet_path(pet), style: 'color: gray;text-decoration:none;' %></h2>
    <p><%= pet.address %></p>
    <p><%= pet.species%></p>
    <p>Found <%= pluralize(pet.found_days_ago, 'day') %> ago</p>
  </div>
</div>
